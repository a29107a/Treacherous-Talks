#!/bin/bash
echo "########################################################"
echo "########################################################"
echo "########################################################"
echo "########################################################"

#rebar clean
rm -rf .eunit

dialyzer --src src | sed 's/warning/w arning/g' # it just keeps nagging....

rebar get-deps \
  && rebar clean \
  && rebar compile \
  && rebar skip_deps=true doc \
  && exit 0

exit 1
