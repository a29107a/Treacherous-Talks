{sys, [
       {lib_dirs, ["../../apps", "../../deps"]},
       {rel, "web_frontend", "1",
        [
         web_frontend,
         kernel,
         stdlib,
         sasl,
         crypto,
         datatypes,
         utils
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "web_frontend"},
       {profile, embedded},
       {excl_archive_filters, [".*"]}, %% Do not archive built libs
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},

       %% Including HiPE can cause issues generating your first upgrade.
       %% If you plan to distribute HiPE in your release remove the
       %% following line.
       {app, hipe, [{incl_cond, exclude}]},

       {app, sasl, [{incl_cond, include}]},
       {app, controller_app, [{incl_cond, include}]},
       {app, eunit, [{incl_cond, include}]},
       % Include yaws, it is started by web_frontend
       {app, yaws, [{incl_cond, include}]},
       % Exclude exmpp since reltool will give a warning about ejabberd_socket
       % being included by two different applications
       {app, exmpp, [{incl_cond, exclude}]}
      ]}.

{target_dir, "web_frontend"}.

{overlay, [
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {copy, "files/web_frontend", "bin/web_frontend"},
           {copy, "files/sys.config", "releases/\{\{rel_vsn\}\}/sys.config"},
           {copy, "files/web_frontend.cmd", "bin/web_frontend.cmd"},
           {copy, "files/start_erl.cmd", "bin/start_erl.cmd"},
           {copy, "files/vm.args", "releases/\{\{rel_vsn\}\}/vm.args"},
           {copy, "files/yaws.conf", "etc/yaws.conf"},
           %% Copy our site (static content)
           {copy,  "../../apps/web_frontend/www", "www"}
          ]}.
