[
 % smtp_frontend config
 { smtp_frontend, [
%       {domain, "localhost"},
       {address, {0,0,0,0}},
       {port, 2525},
       {protocol, tcp},
       {family, inet}
 ]},

 {sasl, [
         {sasl_error_logger, false}
 ]},

 {lager, [
          {handlers,
           [
            {lager_console_backend, info},
            {lager_file_backend,
             [
              {"log/smtp_frontend/info.log", info, 10485760, "$D0", 5}
             ]}
           ]},
          {crash_log, "log/smtp_frontend/crash.log"},
          {crash_log_msg_size, 10485760} % 10 MB max file size
 ]}
].

